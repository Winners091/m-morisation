                },
                {
                    question: "Identifiez la figure présente dans cette phrase de Baudelaire : « La Nature est un temple où de vivants piliers / Laissent parfois sortir de confuses paroles »",
                    options: ["Une allégorie", "Une comparaison", "Une hyperbole", "Une métaphore filée"],
                    correct: 4,
                    explanation: "Une métaphore filée (la Nature comparée à un temple)"
                },
                {
                    question: "Quelle figure de style se trouve dans cette phrase de Flaubert : « Une voix s'éleva, une voix furieuse, une voix douce, une voix solennelle » ?",
                    options: ["Une anadiplose", "Une anaphore", "Une épiphore",  "Une gradation"],
                    correct: 2,
                    explanation: 'Une anaphore (répétition de "une voix" en début de segments)'
                },
                {
                    question: "Dans l'expression « boire un verre », nous trouvons :",
                    options: ["Une métaphore", " Une métonymie du contenant pour le contenu", "Une synecdoque de la partie pour le tout", "Une antonomase"],
                    correct: 2,
                    explanation: "Une métonymie du contenant pour le contenu"
                },
                {
                    question: "« Et rose elle a vécu ce que vivent les roses, l'espace d'un matin » (Malherbe). Cette figure est :",
                    options: ["Une antithèse", "Une paronomase", "Un zeugma", "Une syllepse"],
                    correct: 4,
                    explanation: "Une syllepse (le mot 'rose' est utilisé comme nom propre puis comme fleur)"
                },
                {
                    question: "Dans la phrase « Le renard rusé s'approcha de la ferme », la figure de style est :",
                    options: ["Une épithète homérique", "Un pléonasme", "Une litote", "Une hyperbate"],
                    correct: 1,
                    explanation: "Une épithète homérique (attribut traditionnel associé au renard)"
                },
                {
                    question: "Identifiez la figure dans « Je meurs de soif auprès de la fontaine » (François Villon) :",
                    options: ["Un oxymore", "Un paradoxe", "Une hyperbole", "Une antiphrase"],
                    correct: 2,
                    explanation: "Un paradoxe (contradiction logique)"
                },
                {
                    question: "Le procédé qui consiste à créer un effet comique en changeant légèrement un mot ou une expression connue est :",
                    options: ["Une syllepse", "Un paradoxe", "Un calembour", " Une antanaclase"],
                    correct: 2,
                    explanation: "Jeu de mots fondé sur la différence de sens entre des mots qui se prononcent de la même manière"
                }
            ]
        };

        let currentQuestions = [];
        let currentScore = 0;
        let answeredQuestions = 0;

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function startQuiz() {
            const category = document.getElementById('quizCategory').value;
            currentQuestions = [...quizData[category]];
            shuffleArray(currentQuestions);
            currentScore = 0;
            answeredQuestions = 0;
            
            document.getElementById('startQuiz').style.display = 'none';
            document.getElementById('submitQuiz').style.display = 'block';
            document.getElementById('quizResults').classList.add('hidden');
            
            displayQuestions();
        }

        function displayQuestions() {
            const container = document.getElementById('quizContainer');
            container.innerHTML = '';
            
            currentQuestions.forEach((q, idx) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'bg-white p-6 rounded-lg shadow-md';
                questionDiv.innerHTML = `
                    <p class="font-bold mb-4">${idx + 1}. ${q.question}</p>
                    <div class="space-y-2">
                        ${q.options.map((opt, i) => `
                            <div class="flex items-center">
                                <input type="radio" id="q${idx}_${i}" name="q${idx}" value="${i}" class="mr-2">
                                <label for="q${idx}_${i}">${opt}</label>
                            </div>
                        `).join('')}
                    </div>
                    <div class="explanation mt-4 hidden text-green-600"></div>
                `;
                container.appendChild(questionDiv);
            });
        }

        function submitQuiz() {
            currentScore = 0;
            const questions = document.querySelectorAll('#quizContainer > div');
            
            questions.forEach((q, idx) => {
                const selected = q.querySelector('input:checked');
                if (!selected) return;
                
                const answer = parseInt(selected.value);
                const correct = currentQuestions[idx].correct;
                const explanation = q.querySelector('.explanation');
                
                explanation.textContent = currentQuestions[idx].explanation;
                explanation.classList.remove('hidden');
                
                if (answer === correct) {
                    currentScore++;
                    explanation.classList.remove('text-red-600');
                    explanation.classList.add('text-green-600');
                } else {
                    explanation.classList.remove('text-green-600');
                    explanation.classList.add('text-red-600');
                }
            });
            
            showResults();
        }

        function showResults() {
            const resultsDiv = document.getElementById('quizResults');
            const scoreDisplay = document.getElementById('scoreDisplay');
            const percentage = (currentScore / currentQuestions.length) * 100;
            
            scoreDisplay.textContent = `Score : ${currentScore}/${currentQuestions.length} (${percentage.toFixed(1)}%)`;
            
            let message = '';
            if (percentage >= 80) {
                message = 'Excellent ! Vous maîtrisez bien le sujet.';
            } else if (percentage >= 60) {
                message = 'Bon travail ! Continuez à vous exercer.';
            } else {
                message = 'Continuez à étudier pour améliorer vos connaissances.';
            }
            
            document.getElementById('detailedResults').textContent = message;
            resultsDiv.classList.remove('hidden');
            
            document.getElementById('submitQuiz').style.display = 'none';
            document.getElementById('startQuiz').style.display = 'block';
            document.getElementById('startQuiz').textContent = 'Recommencer le Quiz';
        }

        document.getElementById('startQuiz').addEventListener('click', startQuiz);
        document.getElementById('submitQuiz').addEventListener('click', submitQuiz);
        document.getElementById('quizCategory').addEventListener('change', () => {
    if (document.getElementById('startQuiz').style.display == 'none') {
        startQuiz();
    }
});
    </script>
</div>
    </div>

    <script>
        
// Correction pour la fonction openTab
// Fonction pour gérer l'affichage des onglets
// Fonction pour gérer l'affichage des onglets
function openTab(tabId) {
    // Masquer tous les contenus d'onglets
    const tabContents = document.querySelectorAll('.tab-content');
    tabContents.forEach(content => {
        content.classList.remove('active');
    });

    // Afficher le contenu de l'onglet sélectionné
    const selectedTab = document.getElementById(tabId);
    if (selectedTab) {
        selectedTab.classList.add('active');
        console.log("Onglet activé:", tabId);  // Pour déboguer
    } else {
        console.error("Onglet non trouvé:", tabId);  // Pour déboguer
    }

    // Mettre à jour les styles des boutons
    const tabButtons = document.querySelectorAll('.tab-btn');
    tabButtons.forEach(button => {
        button.classList.remove('bg-blue-600', 'text-white');
        button.classList.add('bg-gray-200', 'hover:bg-gray-300');
    });

    // Mettre en surbrillance le bouton actif
    const activeButton = document.querySelector(`button[onclick="openTab('${tabId}')"]`);
    if (activeButton) {
        activeButton.classList.remove('bg-gray-200', 'hover:bg-gray-300');
        activeButton.classList.add('bg-blue-600', 'text-white');
    }
}

// Initialiser l'affichage du premier onglet au chargement
document.addEventListener('DOMContentLoaded', () => {
    openTab('periodsTab');
    
    // Ajouter des gestionnaires d'événements pour chaque bouton
    document.querySelectorAll('.tab-btn').forEach(button => {
        button.addEventListener('click', function() {
            const tabId = this.getAttribute('onclick').match(/'([^']+)'/)[1];
            openTab(tabId);
        });
    });
});

function toggleCard(card) {
    card.classList.toggle('flipped');
}


    </script>
</body>
</html>
